<!DOCTYPE html>

<html>
    <head>
        <title>
            {% block title %}
                {{ 'sylius.meta.backend_title'|trans }}
            {% endblock %}
        </title>
        <meta charset="UTF-8">
        <!-- responsiveness, scaling... -->
        <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
        <!-- set author of your site -->
        <meta name="author" content="Red Medica">
        <!-- site thumbnail -->
        <link rel="image_src" href="thumbnail.png" />
        <!-- favicon -->
        <link rel="icon" type="image/ico" href="{{asset('favicon.ico')}}">

        <!-- Le HTML5 shim, for IE6-8 support of HTML elements -->
        <!--[if lt IE 9]>
          <script src="https://html5shim.googlecode.com/svn/trunk/html5.js"></script>
        <![endif]-->

        {% block stylesheets %}
            {% stylesheets output='assets/compiled/backend_login.css' filter='cssrewrite'
                'https://netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap.min.css'
                'https://netdna.bootstrapcdn.com/font-awesome/3.2.1/css/font-awesome.css'
                'bundles/syliusweb/css/backend.css'
            %}
                <link rel="stylesheet" href="{{ asset_url }}" type="text/css" />
            {% endstylesheets %}
        {% endblock %}
    </head>
    <body class="signin">
        <form method="post" action="{{ path('sylius_backend_security_login_check') }}" class="form-signin">
            <img src="{{ asset('bundles/syliusweb/img/swan.png') }}" class="swan" />

            {% if error %}
                <div class="alert alert-danger">
                    {{ error }}
                </div>
            {% endif %}

            <input type="text" name="_username" class="form-control input-lg" placeholder="{{ 'sylius.email'|trans }}"><br>
            <input type="password" name="_password" class="form-control input-lg" placeholder="{{ 'sylius.password'|trans }}">
            <hr>
            <button class="btn btn-block btn-lg btn-success" type="submit">{{ 'sylius.login'|trans }}</button>
        </form>
    </body>
</html>

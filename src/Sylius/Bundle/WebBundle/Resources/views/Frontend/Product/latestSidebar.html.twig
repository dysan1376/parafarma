<h4>{{ 'sylius.newest'|trans }}</h4>

<ul>
    {% for product in products %}
        <li>
            <a href="{{ path(product) }}" class="btn btn-link">
                <img class="thumbnail" src="{{ product.image ? product.image.path|imagine_filter('sylius_small') : 'http://placehold.it/50x40/FFFFFF/024770?text=Sin+imagen' }}" alt="{{ product.name }}" />
                <h4>{{ product.name }}</h4>
            </a>
        </li>
    {% endfor %}
</ul>
